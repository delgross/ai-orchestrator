{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/path/to/your/project/folder"],
      "description": "Allows Claude to read, write, and list files in your project directory."
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "YOUR_GITHUB_TOKEN_HERE"
      },
      "description": "Enables Claude to manage repositories, create issues, and review PRs."
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"],
      "description": "Provides up-to-date documentation for libraries like Tiptap, Lexical, or Monaco."
    },
    "docker": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-docker"],
      "description": "Allows Claude to inspect and manage Docker containers if you're containerizing your app."
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "description": "A 'knowledge graph' server that helps Claude remember details about your app's architecture across sessions."
    }
  }
}