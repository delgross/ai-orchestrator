# Unified Configuration File for AI Orchestrator
# This is a template for the future unified configuration.
# Currently, services use router.env and agent_runner/agent_runner.env
# This file is for reference and future migration.

router:
  # Core service URLs
  ollama_base: "http://127.0.0.1:11434"
  agent_runner_url: "http://127.0.0.1:5460"
  
  # Development mode (enable auto-reload)
  dev_mode: false
  
  # Optional: RAG backend
  # rag_base: "http://127.0.0.1:5555"
  # rag_query_path: "/query"
  
  # Optional: Providers YAML location
  providers_yaml: "~/ai/providers.yaml"
  
  # Optional: Security
  # router_auth_token: ""  # Set in environment or providers.env
  router_max_concurrency: 20
  
  # Optional: Performance
  models_cache_ttl_s: 300
  http_timeout_s: 60
  max_request_body_bytes: 10000000

agent_runner:
  # Core configuration
  agent_model: "openai:gpt-5-chat-latest"
  gateway_base: "http://127.0.0.1:5455"
  agent_fs_root: "~/ai/agent_fs_root"
  
  # Development mode
  dev_mode: false
  
  # MCP Servers (comma-separated: name=url)
  mcp_servers: "firecrawl-mcp=stdio:npx -y firecrawl-mcp,mcp-pandoc=stdio:uvx mcp-pandoc,tavily-search=stdio:uv --directory /Users/bee/Sync/mcp-server-tavily run tavily-search"
  
  # Persistence and caching
  agent_persistence_dir: "~/ai/agent_data"
  tool_cache_enabled: true
  tool_cache_ttl: 300.0
  
  # Performance monitoring
  performance_alert_threshold_ms: 5000.0
  performance_degradation_factor: 2.0
  
  # Circuit breaker
  mcp_circuit_breaker_threshold: 5
  mcp_circuit_breaker_timeout: 60.0
  
  # Retry logic
  tool_retry_attempts: 2
  tool_retry_backoff_factor: 0.5
  
  # File operation limits
  agent_max_read_bytes: 200000
  agent_max_list_entries: 500
  agent_max_tool_steps: 8
  
  # HTTP timeout
  agent_http_timeout_s: 120.0

